<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_btn_frame">


    <EditText
        android:id="@+id/edit_search_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/x30"
        android:background="@null"
        android:digits="@string/text_digits"
        android:hint="@string/text_input_member_tel_or_card"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/color_505050"
        android:textColorHint="@color/color_text_ababab"
        android:textSize="@dimen/text_size_28"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_search"
        android:layout_width="@dimen/x104"
        android:layout_height="0dp"
        android:paddingStart="@dimen/x30"
        android:paddingEnd="@dimen/x30"
        android:src="@drawable/ic_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--<ImageView-->
        <!--android:id="@+id/iv_clear"-->
        <!--android:layout_width="@dimen/x42"-->
        <!--android:layout_height="@dimen/y42"-->
        <!--android:layout_marginEnd="@dimen/x30"-->
        <!--android:src="@drawable/ic_clear"-->
        <!--android:visibility="gone"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toStartOf="@+id/tv_search"-->
        <!--app:layout_constraintStart_toEndOf="@+id/edit_search_phone"-->
        <!--app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="@color/color_333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>