<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y140"
    android:background="@color/color_text_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_equipment_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:textColor="@color/color_505050"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y50"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        style="@android:style/Widget.ProgressBar.Small.Inverse"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_abnormal"
        android:paddingLeft="9dp"
        android:paddingTop="6dp"
        android:paddingRight="9dp"
        android:paddingBottom="6dp"
        android:text="@string/reconnection"
        android:textColor="@color/color_text_white"
        android:textSize="10sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_equipment_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:text="@string/device_normal"
        android:textColor="@color/color_16A1E1"
        android:textSize="14sp" />

</LinearLayout>