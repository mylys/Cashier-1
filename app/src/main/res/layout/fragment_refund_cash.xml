<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_text_white">

    <!--支付方式选择-->
    <com.easygo.cashier.widget.PayWayView
        android:id="@+id/pay_way_view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_title">

    </com.easygo.cashier.widget.PayWayView>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y21"
        android:background="@color/color_f0f3f7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pay_way_view"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kb"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/x154"
        android:layout_height="@dimen/y98"
        android:text="@string/text_delete"
        android:textColor="@color/color_text_white"
        android:textSize="@dimen/text_size_29"
        android:background="@drawable/bg_btn_clear"
        android:layout_marginTop="@dimen/y84"
        android:layout_marginEnd="@dimen/x110"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line1" />

    <EditText
        android:id="@+id/et_money"
        android:layout_width="@dimen/x348"
        android:layout_height="@dimen/y98"
        android:layout_marginEnd="@dimen/x39"
        android:background="@drawable/bg_input"
        android:hint="修改退款金额"
        android:textColorHint="@color/color_d4d3d3"
        android:textSize="@dimen/text_size_29"
        android:paddingStart="@dimen/x31"
        app:layout_constraintTop_toTopOf="@id/btn_delete"
        app:layout_constraintBottom_toBottomOf="@id/btn_delete"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        />

    <com.easygo.cashier.widget.Keyboard
        android:id="@+id/kb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="@dimen/y39"
        app:layout_constraintEnd_toEndOf="@id/btn_delete"
        app:layout_constraintTop_toBottomOf="@id/btn_delete">

    </com.easygo.cashier.widget.Keyboard>



</androidx.constraintlayout.widget.ConstraintLayout>