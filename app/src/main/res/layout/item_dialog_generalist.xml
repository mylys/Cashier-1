<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_view"
    android:layout_width="@dimen/genera_list_item_width"
    android:layout_height="@dimen/genera_list_item_height"
    android:background="@color/color_text_white">

    <TextView
        android:id="@+id/tv_list_name"
        style="@style/GeneralList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x36"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_select"
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/x40"
        android:layout_marginEnd="@dimen/x37"
        android:src="@drawable/icon_genera_select"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>