<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_goods_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x1832"
        android:layout_height="@dimen/y97"
        android:layout_marginTop="@dimen/y43"
        android:background="@drawable/bg_goods_title">

        <TextView
            android:id="@+id/tv_text_goods_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_72"
            android:text="@string/text_goods_name"
            style="@style/GoodsTitleStyle" />


        <TextView
            android:id="@+id/tv_text_goods_classification"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_661"
            android:text="@string/text_classification"
            style="@style/GoodsTitleStyle" />


        <TextView
            android:id="@+id/tv_text_price"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_1054"
            android:text="@string/text_price"
            style="@style/GoodsTitleStyle" />


        <TextView
            android:id="@+id/tv_text_goods_count"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_1291"
            android:text="@string/text_count"
            style="@style/GoodsTitleStyle" />


        <TextView
            android:id="@+id/tv_text_subtotal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_1528"
            android:text="@string/text_subtotal"
            style="@style/GoodsTitleStyle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_goods"
        app:layout_constraintEnd_toEndOf="@id/cl_goods_title"
        app:layout_constraintStart_toStartOf="@id/cl_goods_title"
        app:layout_constraintTop_toBottomOf="@+id/cl_goods_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingStart="@dimen/x1"
        android:paddingEnd="@dimen/x1"
        android:background="@drawable/bg_frame_goods" />



</androidx.constraintlayout.widget.ConstraintLayout>