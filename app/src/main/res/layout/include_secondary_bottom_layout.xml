<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f7fa">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="@dimen/x324"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_num"
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:text="1000" />

        <TextView
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="@string/text_goods_count" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="@dimen/x324"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/view1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_total_price"
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:text="1000" />

        <TextView
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="@string/text_total_money" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="@dimen/x324"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/view2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_product_preferential"
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:text="1000" />

        <TextView
            style="@style/ViceScreen"
            android:layout_width="@dimen/x324"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:text="@string/text_coupon" />

    </LinearLayout>

    <View
        android:id="@+id/view1"
        android:layout_toEndOf="@+id/ll1"
        android:layout_centerVertical="true"
        android:background="@color/color_d3d3d3"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y126"/>

    <View
        android:id="@+id/view2"
        android:layout_toEndOf="@+id/ll2"
        android:layout_centerVertical="true"
        android:background="@color/color_d3d3d3"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y126"/>

    <View
        android:layout_toEndOf="@+id/ll3"
        android:layout_centerVertical="true"
        android:background="@color/color_d3d3d3"
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y126"/>

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/x80"
        android:text="@string/text_total"
        android:textColor="@color/color_3899d9"
        android:textSize="@dimen/x50"
        android:textStyle="bold" />

</RelativeLayout>