<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x767"
    android:layout_height="@dimen/y440"
    android:background="@color/color_text_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_function_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_function_list"
        style="@style/SmallTextStyle"
        android:layout_marginStart="@dimen/x31"
        android:layout_marginTop="@dimen/y22"
        android:layout_marginBottom="@dimen/y22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rv_function"/>

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="@dimen/x38"
        android:layout_height="@dimen/y38"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="@dimen/x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_function_list"
        app:layout_constraintBottom_toBottomOf="@id/tv_function_list"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_function_list"
        app:layout_constraintBottom_toBottomOf="parent">

    </android.support.v7.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>