<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_title"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y100"
    android:background="@color/color_cc565a">

    <com.niubility.library.widget.imageview.CircleImageView
        android:id="@+id/civ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/y54"
        android:layout_marginStart="@dimen/x23"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_cashier_acount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/civ"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x33"
        android:text="收银员： xxx"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x49"
        android:layout_height="@dimen/y49"
        android:layout_marginEnd="@dimen/x36"
        android:background="@null"
        android:contentDescription="帮助"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/help"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x49"
        android:layout_height="@dimen/y49"
        android:layout_marginEnd="@dimen/x47"
        android:background="@null"
        android:contentDescription="设置"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/network"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/setting"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x49"
        android:layout_height="@dimen/y49"
        android:layout_marginEnd="@dimen/x47"
        android:background="@null"
        android:contentDescription="网络状态"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/network"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x49"
        android:layout_height="@dimen/y49"
        android:layout_marginEnd="@dimen/x47"
        android:background="@null"
        android:contentDescription="菜单"
        android:src="@mipmap/ic_launcher" />



    <!--退款页面-->
    <ImageView
        android:id="@+id/iv_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/x71"
        android:layout_height="@dimen/x71"
        android:layout_marginStart="@dimen/x9"
        android:background="@null"
        android:contentDescription="返回"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x90"
        android:text="@string/text_refund"
        android:textSize="@dimen/x28"
        android:textColor="@color/color_text_white"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_cashier"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/help"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x32"
        android:text="收银员：工号"
        android:textSize="@dimen/x28"
        android:textColor="@color/color_text_white"
        android:visibility="gone"/>




</androidx.constraintlayout.widget.ConstraintLayout>