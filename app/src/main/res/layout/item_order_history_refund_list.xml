<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x1832"
    android:layout_height="@dimen/y90"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_select"
        android:layout_width="@dimen/x45"
        android:layout_height="@dimen/y45"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/x36" />

    <TextView
        android:id="@+id/tv_product_name"
        style="@style/RefundList"
        android:layout_width="@dimen/x486"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/x30"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="一个很长很长很长的商品名666666" />

    <TextView
        android:id="@+id/tv_product_price"
        style="@style/RefundList"
        android:layout_width="@dimen/x282"
        android:layout_height="wrap_content"
        android:text="1000.00" />

    <TextView
        android:id="@+id/tv_product_preferential"
        style="@style/RefundList"
        android:layout_width="@dimen/x171"
        android:layout_height="wrap_content"
        android:text="0" />

    <TextView
        android:id="@+id/tv_product_subtotal"
        style="@style/RefundList"
        android:layout_width="@dimen/x225"
        android:layout_height="wrap_content"
        android:text="1000.00" />

    <TextView
        android:id="@+id/tv_refund_num_no"
        android:layout_width="@dimen/x321"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_12"
        android:visibility="gone" />

    <com.easygo.cashier.widget.CountTextView
        android:id="@+id/tv_refund_num"
        android:layout_width="@dimen/x321"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_12"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone">

        <com.easygo.cashier.widget.CountEditText
            android:id="@+id/edit_refund_subtotal"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:gravity="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_refund_subtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="1000.00"
        android:textColor="@color/color_303030"
        android:textSize="@dimen/sp_12" />

</LinearLayout>