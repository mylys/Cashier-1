<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:MyTitleBar="http://schemas.android.com/apk/res-auto">


    <!--标题栏-->
    <com.easygo.cashier.widget.MyTitleBar
        android:id="@+id/cl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        MyTitleBar:title_text="@string/text_settlement"
        MyTitleBar:status="1"
        MyTitleBar:show_right_account="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.easygo.cashier.widget.MyTitleBar>

    <!--支付方式选择-->
    <com.easygo.cashier.widget.PayWayView
        android:id="@+id/pay_way_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_title">

    </com.easygo.cashier.widget.PayWayView>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/kb"
        app:layout_constraintTop_toBottomOf="@id/pay_way_view"
        app:layout_constraintBottom_toTopOf="@id/tv_print">

    </FrameLayout>

    <com.niubility.library.widget.keyboard.NumericKeyboard
        android:id="@+id/kb"
        android:layout_width="@dimen/keyboard_width"
        android:layout_height="@dimen/keyboard_height"
        android:background="@color/color_bg_input_keyboard"
        android:keyBackground="@drawable/bg_keyboard"
        android:keyTextColor="#101010"
        android:keyTextSize="@dimen/x36"
        android:labelTextSize="@dimen/x36"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:shadowColor="#BBBBBB"
        android:shadowRadius="0.0"
        android:padding="@dimen/x16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    </com.niubility.library.widget.keyboard.NumericKeyboard>

    <TextView
        android:id="@+id/tv_print"
        android:layout_width="@dimen/x233"
        android:layout_height="@dimen/y81"
        android:text="@string/text_print_paper"
        style="@style/TextStyle"
        android:gravity="center_vertical"
        android:background="@drawable/bg_frame"
        android:button="@null"
        android:drawableStart="@drawable/check_box"
        android:drawablePadding="@dimen/x20"
        android:paddingStart="@dimen/x25"
        android:layout_marginStart="@dimen/x27"
        android:layout_marginTop="@dimen/y27"
        android:layout_marginBottom="@dimen/y27"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>