<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
    </style>


    <!--旧设计稿-->
    <style name="TextStyle">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="RedTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/color_cc565a</item>
    </style>

    <style name="WhiteTextStyle">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:textSize">@dimen/text_size_28</item>
    </style>

    <style name="MiddleTextStyle">
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textSize">@dimen/text_size_25</item>
    </style>
    <!--旧设计稿-->


    <!--历史订单-->
    <style name="SmallRedTextStyle" parent="DetailTextStyle">
        <item name="android:textColor">@color/color_cc565a</item>
    </style>
    <style name="SmallBlueTextStyle" parent="DetailTextStyle">
        <item name="android:textColor">@color/color_text_3899d9</item>
    </style>

    <style name="PayButtonStyle" parent="TextStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/x42</item>
    </style>

    <style name="DialogStyle" parent="CustomDialogStyle">
        <!-- 禁止对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--商品标题名称-->
    <style name="GoodsTitleStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_29</item>
        <item name="android:textColor">@color/color_goods_title</item>
    </style>
    <!--商品列表-->
    <style name="GoodsListStyle">
        <item name="android:textSize">@dimen/text_size_29</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>

    <!--弹窗文本-->
    <style name="DialogTextStyle">
        <item name="android:textSize">@dimen/text_size_37</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>
    <!--商品价格详情-->
    <style name="GoodsSettlementDetailStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_42</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>
    <style name="GoodsSettlementDetailTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_30</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>

    <style name="DetailTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_28</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>

    <!--结算详情页-->
    <style name="SettlementDetailTextStyle">
        <item name="android:textColor">@color/color_7e7e7e</item>
        <item name="android:textSize">@dimen/text_size_42</item>
    </style>

    <style name="KeyboardTextStyle">
        <item name="android:layout_width">@dimen/x154</item>
        <item name="android:layout_height">@dimen/y98</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_505050</item>
        <item name="android:textSize">@dimen/text_size_38</item>
        <item name="android:background">@drawable/bg_btn_frame</item>
    </style>

    <!--交接班-->
    <style name="HandoverTextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_37</item>
        <item name="android:textColor">@color/color_505050</item>
    </style>
    <style name="HandoverMoneyTextStyle" parent="HandoverTextStyle">
        <item name="android:textSize">@dimen/text_size_84</item>
        <item name="android:textColor">@color/color_51bfb0</item>
    </style>



</resources>
