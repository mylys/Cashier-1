<?xml version="1.0" encoding="utf-8"?>
<animated-rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="50"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="360">
    <shape
        android:innerRadius="@dimen/x15"
        android:shape="ring"
        android:thickness="@dimen/x6"
        android:useLevel="false">
        <gradient
            android:centerY="0.50"
            android:endColor="@color/color_d3d3d3"
            android:startColor="#40d3d3d3"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</animated-rotate>